<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/scout_blue_dashboard</item>
        <item name="colorPrimaryDark">@color/scout_blue_dashboard</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBarOverlay">true</item>

        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!--<item name="android:statusBarColor">@color/white</item>-->
        <!--<item name="android:windowLightStatusBar">true</item>-->
    </style>


    <style name="NoActionBarDetail" parent="Theme.AppCompat.Light.NoActionBar" >
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorPrimary">@color/black</item>
    <item name="colorPrimaryDark">@color/black</item>

        <item name="android:windowActionBarOverlay">true</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="allBlueButtons">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="generalScreenHints">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mavenpro_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="generaEditBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


    </style>
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">

        <item name="android:colorControlActivated">@color/coloSwitch</item>
    </style>
    <style name="generalSwitchTheme" parent="Theme.AppCompat.Light">

        <item name="android:colorControlActivated">@color/scout_blue_dashboard</item>
    </style>

    <style name="FormTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#b4d3e7</item>
    </style>

    <style name="general_button_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">Next</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:drawableEnd">@drawable/send</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">@drawable/genera_list_but</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:drawableEnd">@drawable/radiobtn</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/padding_normal</item>
    </style>

    <style name="gener_size_sec_titl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/mavenpro_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="size_twnty">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="size_sevntn">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/scout_blue_dashboard</item>
        <item name="colorControlActivated">@color/scout_blue_dashboard</item>
    </style>

    <style name="general_edit_text">
        <item name="android:inputType">textShortMessage|textAutoCorrect|textCapSentences|textMultiLine</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/scout_blue_dashboard</item>

    </style>
</resources>
