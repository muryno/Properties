                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gym"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginStart="1dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
