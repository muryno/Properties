<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.muryno.listedkey.Wallet.ChosePaidType">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarlist"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_20"
        android:layout_marginRight="@dimen/margin_right_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mavenpro_bold"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:text="@string/chs_to_getpaid"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payout methods in Nigeria."
                android:textSize="17sp"
                android:layout_marginTop="@dimen/margin_top_25"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="bankTranfer"

            android:layout_marginTop="@dimen/margin_top_25">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bnk_trans"
                    style="@style/size_twnty"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nextt"
                    android:textSize="17sp"
                    android:background="@color/ghostWite"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </android.support.constraint.ConstraintLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_right_20"
                android:background="@color/grey_500" />




        </LinearLayout>
    </LinearLayout>
</LinearLayout>